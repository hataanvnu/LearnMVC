@{
    Layout = "_Admin_Layout";
}
@model AddQuestionVM

<h3>Gör ett nytt quiz, Admin!</h3>
<br />
        UNICORNS!
<h2>Add Quiz Unit</h2>
<form asp-controller="Admin" asp-action="AddQuestion">
    <label asp-for="QuestionText"></label>
    <textarea asp-for="QuestionText" class="bigTextBox"></textarea>
    <span asp-validation-for="QuestionText"></span>
    <br />
    <br />
    <label asp-for="SelectedQuizUnitId"></label>
    <select asp-for="SelectedQuizUnitId" asp-items="@Model.PossibleQuizUnits"></select>
    <span asp-validation-for="SelectedQuizUnitId"></span>
    <br />
    <br />

    @for (int i = 0; i < Model.Answers.Length; i++)
            {
        <div class="radio" data-toggle="radio">
            <label asp-for="@Model.Answers[i]"><input type="radio" name="correctAnswer" value="@i" /></label>
            <input asp-for="@Model.Answers[i]" />
            <span asp-validation-for="@Model.Answers"></span>
        </div>
                <br />
                <br />
    }

    <button type="submit" class="btn btn-default">Summon Unicorns!</button>
</form>

