@model SidebarVM[]
<div id="sidebarz">
    <div class="row" id="knappochhero">

            <div class="row" onclick="GoToIndex()" style="padding:12px;">
                <a asp-controller="memberas" asp-action="index">My profile</a> | <a asp-controller="members" asp-action="logout">Log out!</a>
            </div>
        </div>

    </div>
    @foreach (var category in Model)
    {
        if (category.IsDone)
        {
            <div id="sidebarzItemDone" onclick="ResetCategory(@category.CategoryID)">
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            @category.CategoryName <br />
                            Completed
                        </p>
                    </div>
                    <div class="col-md-5">
                        <img src="~/Images/Check.png" width="50" style="padding-top:10px;float:right;padding-right:10px;" />
                    </div>
                </div>
            </div>
        }
        else
        {
            <div id="sidebarzItem" onclick="DoStuff(@category.CategoryID)">
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            @category.CategoryName <br />
                            Go!
                        </p>
                    </div>
                    <div class="col-md-5">

                    </div>
                </div>

            </div>
        }
    }
</div>