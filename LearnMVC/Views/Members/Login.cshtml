@{
    Layout = "_NoSidebar_Layout";
}
@model MembersLoginVM
<!--HEADER HAPPENS HERE-->
@Html.Partial("_NoSidebarHeader", Model.HeadersVM)

<!--FORM HAPPENS HERE-->
<br />
<form asp-controller="Members" asp-action="Login">
    <div class="row">
        <div class="col-md-4">
            <label asp-for="UserName"></label>
            <br /><br />
            <label asp-for="Password"></label>

        </div>
        <div class="col-md-4">
            <input asp-for="UserName" />
            <br /><br />
            <input asp-for="Password" />

        </div>
    </div>
    <span asp-validation-for="UserName"></span>
    <span asp-validation-for="Password"></span>
    <br />
    <br />

    <button type="submit" class="btn btn-default">Go!</button>
</form>
<br />
