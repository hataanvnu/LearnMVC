@model SidebarVM[]
<div id="sidebarz">
    <div class="row" id="knappochhero">
            <div class="row"><h4 style="text-align:center">My Profile</h4></div>

            <div class="row" onclick="GoToIndex()">
                <div class="col-md-6">
                    <img src="~/Images/super.png" height="40" style="float:right;padding-right:10px" />
                </div>
                <div class="col-md-6">
                    <button onclick="Logout()" class="btn btn-default" style="float:left;padding-left:10px;padding-top:3px;">Log out</button>
                </div>
            </div>
        </div>

    </div>
    @foreach (var category in Model)
    {
        if (category.IsDone)
        {
            <div id="sidebarzItemDone" onclick="ResetCategory(@category.CategoryID)">
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            @category.CategoryName <br />
                            Completed
                        </p>
                    </div>
                    <div class="col-md-5">
                        <img src="~/Images/Check.png" width="50" style="padding-top:10px;float:right;padding-right:10px;" />
                    </div>
                </div>
            </div>
        }
        else
        {
            <div id="sidebarzItem" onclick="DoStuff(@category.CategoryID)">
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            @category.CategoryName <br />
                            Go!
                        </p>
                    </div>
                    <div class="col-md-5">

                    </div>
                </div>

            </div>
        }
    }
</div>